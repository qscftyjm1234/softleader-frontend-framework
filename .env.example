# ========================================
# 功能開關環境變數配置範例
# ========================================
# 
# 複製此文件為 .env 並根據需求修改
# 環境變數會覆蓋 config/features.ts 中的預設值
#

# ========================================
# 開發工具 (Dev Tools)
# ========================================

# 自動生成函數歷史記錄文件
NUXT_PUBLIC_FEATURE_HISTORY_GENERATION=true

# API Mock 功能
NUXT_PUBLIC_FEATURE_API_MOCK=true

# 開發環境日誌輸出
NUXT_PUBLIC_FEATURE_DEV_LOGGING=true

# 顯示開發工具面板
NUXT_PUBLIC_FEATURE_DEV_TOOLS_PANEL=true

# ========================================
# 日誌系統 (Logging)
# ========================================

# Console 日誌輸出
NUXT_PUBLIC_FEATURE_CONSOLE_LOG=true

# API 請求/響應日誌
NUXT_PUBLIC_FEATURE_API_LOG=true

# 業務邏輯執行日誌
NUXT_PUBLIC_FEATURE_BUSINESS_LOG=true

# 錯誤詳細資訊和堆疊追蹤
NUXT_PUBLIC_FEATURE_ERROR_DETAILS=true

# ========================================
# 監控與追蹤 (Monitoring)
# ========================================

# 性能監控和指標收集
NUXT_PUBLIC_FEATURE_PERFORMANCE=false

# 自動錯誤追蹤和報告
NUXT_PUBLIC_FEATURE_ERROR_TRACKING=false

# 使用者行為分析
NUXT_PUBLIC_FEATURE_ANALYTICS=false

# 頁面載入時間追蹤
NUXT_PUBLIC_FEATURE_PAGE_LOAD_TRACKING=false

# ========================================
# 實驗性功能 (Experimental)
# ========================================

# 啟用 Beta 測試功能
NUXT_PUBLIC_FEATURE_BETA=false

# A/B 測試功能
NUXT_PUBLIC_FEATURE_AB_TESTING=false

# 新版使用者介面
NUXT_PUBLIC_FEATURE_NEW_UI=false

# ========================================
# 第三方服務整合 (Integrations)
# ========================================

# Google Analytics 整合
NUXT_PUBLIC_FEATURE_GOOGLE_ANALYTICS=false

# Sentry 錯誤追蹤整合
NUXT_PUBLIC_FEATURE_SENTRY=false

# Hotjar 使用者行為分析
NUXT_PUBLIC_FEATURE_HOTJAR=false
