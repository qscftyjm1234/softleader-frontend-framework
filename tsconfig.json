{
  // https://nuxt.com/docs/guide/concepts/typescript
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "composite": true,
    "noEmit": false
  },
  "files": [],
  "references": [
    {
      "path": "./.nuxt/tsconfig.json"
    },
    {
      "path": "./.nuxt/tsconfig.server.json"
    }
  ],
  "include": ["types/**/*.d.ts"],
  "exclude": [
    "**/*-test.vue",
    "**/*.test.vue",
    "**/*.ignore.vue",
    "**/*-test.ts",
    "**/*.test.ts",
    "**/*.ignore.ts"
  ]
}
